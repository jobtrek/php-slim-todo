<form class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl w-full"
      action="{{ todo ? url_for('update-todo', { 'id': todo.id }) : url_for('new-todo') }}"
      method="post">
    <div class="px-6 pt-8 pb-6">
        <div class="grid grid-cols-2 gap-x-6 gap-y-8">
            <div class="relative col-span-1">
                <label for="title"
                       class="absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900">Titre</label>
                <input type="text" name="title" id="title"
                       class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6"
                       placeholder="Apprendre PHP" value="{{ todo.title ?? '' }}">
            </div>

            <div class="relative col-span-1">
                <label for="due_at"
                       class="absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900">Délai</label>
                <input type="datetime-local" name="due_at" id="due_at"
                       class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6"
                       placeholder="Jane Smith"  value="{{ todo.due_at ?? '' }}">
            </div>

            <div class="relative col-span-2">
                <label for="description"
                       class="absolute -top-2 left-2 inline-block bg-white px-1 text-xs font-medium text-gray-900">Description</label>
                <textarea type="text" name="description" id="description"
                          class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-600 sm:text-sm sm:leading-6"
                          placeholder="Détails de la todo">{{ todo.description ?? '' }}</textarea>
            </div>

        </div>
    </div>
    <div class="flex items-center justify-end gap-x-6 px-6 pb-6">
        <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Clear</button>
        <button type="submit"
                class="rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600">
            {{ todo ? 'Modifier' : 'Ajouter' }}
        </button>
    </div>
</form>
